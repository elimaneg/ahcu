$ curl -O https://mirror.openshift.com/pub/openshift-v4/x86_64/clients/ocp/stable/oc-mirror.tar.gz
$ tar -xvf oc-mirror.tar.gz
$ chmod +x ./oc-mirror
$ sudo mv ./oc-mirror /usr/local/bin/

# Exemples:
 # Flow full deconnecte (0-0) mirror-to-disk: sync de la release 4.19 sur le disk
 - bash ./flow-0-0-mirrorToDisk 4.19 dev release

 # Flow full deconnecte (0-1) disk-to-mirror: sync de la release 4.19 depuis le disk vers le registre mirroir
 - bash ./flow-0-1-diskToMirror 4.19 dev release

 # Flow semi deconnecte: sync de la release 4.19 depuis le mirroir de redhat vers le registre mirroir (deconnecte)
 - bash ./flow-mirrorToMirror 4.19 dev release

 # Flow semi deconnecte: sync des operateurs de 4.19 depuis le mirroir de redhat vers le registre mirroir (deconnecte)
 - bash ./flow-mirrorToMirror 4.19 dev operator